<% layout('layout') -%>

    <div class="row">
        <div class="col-lg-6 col-md-offset-3">
            <div class="panel panel-default" style="box-shadow: 5px 5px 8px #c3c3c3;">
              <div class="panel-body">
            <% if(message.length>0){ %>
            <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-label="close">
                <span aria-hidden="true">&times;</span>
                </button>
                <%= message %>
            </div>
            
            <% } %>
           
            
            <h2>登录：</h2><span class="pull-right">还没注册？ <a href="/signup">来注册一下</a></span>
            <form method="post" action="/login" name="register" enctype="application/x-www-form-urlencoded">
                <div class="form-group">
                    <label name="Email">邮箱：</label>
                    <input type="email" name="email" class="form-control">

                </div>
                <div class="form-group">
                    <label name="password">密码：</label>
                    <input type="password" name="password" class="form-control" ng-model="pwd" id="password">

                </div>
                <button type="submit" class="btn btn-success" id="submit" style="width: 100%;">登录</button>

            </form>
                </div>
            </div>
        </div>
    </div>
